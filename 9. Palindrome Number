## tried without using any space - without conversion to string - failing few test cases

class Solution 
{
    public boolean isPalindrome(int x) 
    {
        if (x<0){
            return false;
        }
        if (x>=0 && x<10){
            return true;
        }
        while (x!=0){
            if ((x%10)!=(x/(int)(Math.pow(10,(int)(Math.log10(x)))))){
                //System.out.print(x%10);
                //System.out.print(x/(int)(Math.pow(10,(int)(Math.log10(x)))));
                return false;
            }
            System.out.print(x);
            System.out.print("\n");
            //System.out.print(x%10);
            //System.out.print(x/(int)(Math.pow(10,(int)(Math.log10(x)))));
            //System.out.print("\n");
            //System.out.print("\n");
            if((int)(Math.log10(x)+1) == 1 ||(int)(Math.log10(x)+1) == 2 ){
                break;
            }
            x=x/10;
            //System.out.print(x);
            //System.out.print("\n");
            System.out.print((((float)(x))/(int)(Math.pow(10,(int)(Math.log10(x))))) + "-" + (float)(x/(int)(Math.pow(10,(int)(Math.log10(x))))) + "*" + (int)(Math.pow(10,(int)(Math.log10(x)-1))) );
            System.out.print("\n");
            //System.out.print((int)(Math.log10(x)));
            //System.out.print("\n");
            //x=x%(10*(int)(Math.log10(x)));
            x = (int)(((((float)(x))/(int)(Math.pow(10,(int)(Math.log10(x))))) - (float)(x/(int)(Math.pow(10,(int)(Math.log10(x)))))) * (int)(Math.pow(10,(int)(Math.log10(x)-1)))); 
            System.out.print(x);
            System.out.print("\n");
            System.out.print("\n");
        }
        return true;
                       
    }
}
